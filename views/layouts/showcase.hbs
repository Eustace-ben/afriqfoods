  <br>
  <section class="mt-5">
    <div class="container" style="color: white;">
      <div class="row">

        <div class="card">
          <div class="card-header text-center lead text-capitalize bg-secondary">
            <span>Show your special formulated recipe to the world!</span>
          </div>
          <div class="card-body">

            <form ref='uploadForm' action='/users/showcase' method='post' encType="multipart/form-data">
              <div class="mb-3">
                <label class="form-label">Recipe Name</label>
                <input type="text" class="form-control" name="recipeName">
              </div>

              <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                <option selected>What type of Recipe</option>
                <option name="Nigerian" value="1">Nigerian</option>
                <option name="Foreign" value="2">Foreign</option>
              </select>

              <div class="mb-3">
                <label class="form-label">description</label>
                <textarea class="form-control" rows="3" name="desc"></textarea>
              </div>
              <input type="hidden" name="id" value="{{user.id}}">
              <div class="mb-3">
                <input type="file" name="sampleFile" style="background-color: gray;" />
              </div>

              <div class="mb-3">
                <input type='submit' value='Submit' class=" btn btn-sm btn-secondary" />
              </div>
            </form>

          </div>
        </div>

      </div>
    </div>
  </section>

